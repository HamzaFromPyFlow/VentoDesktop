{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./renderer/*"]
    },
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "renderer/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "main"
  ]
}
